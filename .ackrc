--smart-case

--sort-files

# Always color, even if piping to another program
--color

# HAML & SASS
--type-add=css=.sass,.scss
--type-add=html=.dust
--type-set=dust=.dust

# JSON
--type-set=json=.json
--type-add=js=.json
--type-add=yaml=.json

# Conf
--type-set=conf=.conf,.config

# Markdown, Textile, Rdoc & POD
--type-set=markdown=.markdown,.md,.mdown,.mkd,.mkdn
--type-set=textile=.textile
--type-set=rdoc=.rdoc
--type-set=pod=.pod

# documentation
--type-set=documentation=.markdown,.md,.mdown,.mkd,.mkdn,.textile,.rdoc,.pod.txt

# Ignore
--ignore-dir=build
--ignore-dir=node_modules
--ignore-dir=coverage
--ignore-dir=artifacts
--ignore-dir=coverage
--ignore-dir=tmp
--ignore-dir=vendor
--ignore-dir=components-dist
--ignore-dir=dist
--ignore-dir=.vscode
--ignore-dir=typings
--ignore-dir=Carthage
--ignore-file=ext:jsbundle
